{
  "AWSEBDockerrunVersion": 2,
  "authentication": {
    "bucket": "ds-docker-credentials",
    "key": ".dockercfg"
  },

  "containerDefinitions": [
    {
      "name": "web",
      "image": "datastrata/web-mobile:next",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "containerPort": 443
        }
      ],
      "links": [
        "rest",
        "ds-record-submission",
        "ds-socket",
        "ds-stripe-payments"
      ]
    },
    {
      "name": "rest",
      "image": "datastrata/rest-ts-node:next",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 3000,
          "containerPort": 3000
        }
      ]
    },
    {
      "name": "ds-record-submission",
      "image": "datastrata/ds-record-submission:next",
      "essential": true,
      "memory": 1024,
      "portMappings": [
        {
          "hostPort": 3002,
          "containerPort": 3002
        }
      ]
    },
    {
      "name": "ds-socket",
      "image": "datastrata/ds-socket:next",
      "essential": true,
      "memory": 64,
      "portMappings": [
        {
          "hostPort": 3030,
          "containerPort": 3030
        }
      ]
    },
    {
      "name": "ds-jobs",
      "image": "datastrata/ds-jobs:next",
      "essential": true,
      "memory": 512
    },
    {
      "name": "ds-stripe-payments",
      "image": "datastrata/ds-stripe-payments-ts:next",
      "essential": true,
      "memory": 64
    }
  ]
}
