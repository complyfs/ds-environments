{
  "AWSEBDockerrunVersion": 2,
  "authentication": {
    "bucket": "ds-docker-credentials",
    "key": ".dockercfg"
  },

  "containerDefinitions": [
    {
      "name": "web",
      "image": "datastrata/web-mobile",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "containerPort": 443
        }
      ],
      "links": [
        "rest",
        "ds-record-submission"
      ]
    },
    {
      "name": "rest",
      "image": "datastrata/rest-ts-node",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 3000,
          "containerPort": 3000
        }
      ]
    },
    {
      "name": "ds-record-submission",
      "image": "datastrata/ds-record-submission",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 3002,
          "containerPort": 3002
        }
      ]
    }
  ]
}
